<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolBarConversation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background_color"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:navigationIcon="@drawable/ic_back_arrow_white"
    app:popupTheme="@style/MainMenuStyle">

    <androidx.cardview.widget.CardView
        android:id="@+id/userInfoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/default_background_color"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/base_margin_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage_Chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_24"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_24"
                android:textStyle="bold"
                tools:text="@string/username1" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.Toolbar>
